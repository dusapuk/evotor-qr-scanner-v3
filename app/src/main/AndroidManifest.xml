<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.omskeda.qrscanner">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Требования -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:name=".QRScannerApplication"
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRScanner"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        
        <!-- App UUID для идентификации на Эвотор -->
        <meta-data
            android:name="app_uuid"
            android:value="894465ae-9dae-4035-aa44-77981c3e3144" />
        
        <!-- Главная активность -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Интеграция с Эвотор -->
            <meta-data
                android:name="ru.evotor.launcher.BACKGROUND_COLOR"
                android:value="#CF1A02" />
        </activity>
        
        <!-- Активность сканирования -->
        <activity
            android:name=".ScanActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.QRScanner.Fullscreen"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Активность деталей заказа -->
        <activity
            android:name=".OrderDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
            
        <!-- Активность настроек -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />
        
        <!-- Активность логов -->
        <activity
            android:name=".LogViewerActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"
            android:label="@string/logs_title" />
        
        <!-- FileProvider для экспорта логов -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>

